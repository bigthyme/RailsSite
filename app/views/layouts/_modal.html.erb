      <span class="add-on"><i class="icon-envelope"></i></span>
      <!-- <input class="span3" id="appendedInput" type="text" placeholder="Your Email..."> -->
      <%= email_field(:user, :address) %>
    </div>
</div>
    <div class="center modal-footer">
    <button id="form-submit"class="btn btn-large btn-success">Submit</button>
  </div>
</div>
